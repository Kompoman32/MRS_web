@using MRS_web.Models.EDM
@model int?

@{
    IEnumerable<Reading> readings = ViewData["Readings"] as IEnumerable<Reading>;
}

@if (Model != null)
{
    <table style="margin-top: 0" class="InfoTable">
        @for (int i = 2; i<=Model; i++)
        {
            string s=readings?.ElementAt(i-1).Value.ToString();
            <tr>
                <td>Показания по тарифу @i</td>
                <td>
                    <input name="Reading" type="number" min="0" max=@double.MaxValue value=@s/>
                    @Html.ValidationMessage("Reading"+(i-1), new { @class = "text-danger" })
                </td>
            </tr>
        }
    </table>
}